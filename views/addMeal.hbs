<main id='form'>
  <form action='/processAddMeal' method='post'>
    <span class='succMsg'>{{succMsg}} <a href='welcome'>{{cont}}</a></span>
    <div>
      <h2>Add Meal <span>to account.</span></h2>
    </div>
    <p class='headingTex'>Awesome Foods CA.</p>
    <input
      type='text'
      name='title'
      id='title'
      value={{title}}
      placeholder='Title'
    />
    {{!-- <span class="errEmail">{{errTitle}}</span> --}}
    <input
      type='text'
      name='ingrediants'
      id='ingrediants'
      value={{ingrediants}}
      placeholder='ingrediants'
    />
    {{!-- <span class="errEmail">{{erringrediants}}</span> --}}
    <input
      type='text'
      name='description'
      id='description'
      value={{description}}
      placeholder='add Description'
    />

    <input
      type='text'
      name='category'
      id='category'
      value={{category}}
      placeholder='category'
    />
    <input
      type='number'
      name='price'
      id='price'
      value={{price}}
      placeholder='price'
    />
    <input
      type='number'
      name='cookingTime'
      id='cookingTime'
      value={{cookingTime}}
      placeholder='cookingTime'
    />
    <input
      type='text'
      name='servings'
      id='servings'
      value={{servings}}
      placeholder='servings'
    />
    <input
      type='text'
      name='topMeal'
      id='topMeal'
      value={{topMeal}}
      placeholder='topMeal'
    />
    <input
      type='text'
      name='photo'
      id='photo'
      value={{photo}}
      placeholder='photo'
    />

    <span class='errEmail'>{{validError}}</span>
    <input type='submit' value='Add Meal' />
  </form>
</main>

